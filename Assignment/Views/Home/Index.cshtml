@model Assignment.Areas.Admin.Models.ViewModel
@{
    ViewBag.Title = "Home";
}

<section id="home">
    <article>
        <h3>Welcome to Khmer Demo</h3>
        <div>
            Welcome
        </div>
    </article>
</section>

<section id="project">
    <article>
        <h3>Website Project</h3>
        <div>
            @try {
                foreach (var item in Model.AllPosts) {
                    <div class="post-title">@Html.DisplayFor(model => item.Title)</div>
                    <div class="post-date">@Html.DisplayFor(model => item.OnDate)</div>
                    <div class="post-descritpion">@Html.DisplayFor(model => item.Content)</div>
                <div class="post-descritpion">@Html.DisplayFor(model => item.Photo)</div>
                <div class="post-descritpion">@Html.DisplayFor(model => item.ByUser)</div>
                }       
            }
            catch (NullReferenceException ex) {  
                <p>No Article</p>
            }
        </div>
    </article>
</section>

<section id="about">
    <article>
