<section id="admin">
    <article>
        <h3></h3>
        <div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "SignIn failed. Check your signin details.");

                <div class="frm">
                            
                    <div class="lbl">
                        @Html.LabelFor(u => u.SignIn.Username)
                    </div>
                    <div class="txt">
                        @Html.TextBoxFor(u => u.SignIn.Username)
                        @Html.ValidationMessageFor(u => u.SignIn.Username)
                    </div>
                    <div class="lbl">
                        @Html.LabelFor(u => u.SignIn.Password)
                    </div>
                    <div class="txt">
                        @Html.PasswordFor(u => u.SignIn.Password)
                        @Html.ValidationMessageFor(u => u.SignIn.Password)
                    </div>
                    <div class="lbl">
                        @Html.CheckBoxFor(u => u.SignIn.Remember)
                        @Html.LabelFor(u => u.SignIn.Remember)
                    </div>
                    <input type="submit" value="Sign In" />
                    @Html.ActionLink("Sign Up", "SignUp", "Admin")
                            
                </div>
            }
        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "SignUp failed. Check your signin details.");

                <div class="frm">
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Username)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.SignUp.Username)
                        @Html.ValidationMessageFor(u => u.SignUp.Username)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Password)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.SignUp.Password)
                        @Html.ValidationMessageFor(u => u.SignUp.Password)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.ConfirmPassword)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.SignUp.ConfirmPassword)
                        @Html.ValidationMessageFor(u => u.SignUp.ConfirmPassword)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Firstname)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.SignUp.Firstname)
                        @Html.ValidationMessageFor(u => u.SignUp.Firstname)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Lastname)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.SignUp.Lastname)
                        @Html.ValidationMessageFor(u => u.SignUp.Lastname)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Address)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.SignUp.Address)
                        @Html.ValidationMessageFor(u => u.SignUp.Address)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(u => u.SignUp.Email)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.SignUp.Email)
                        @Html.ValidationMessageFor(u => u.SignUp.Email)
                    </div>
                    <input type="submit" value="Sign Up" />
                </div>
            }
        </div>
    </article>
</section>