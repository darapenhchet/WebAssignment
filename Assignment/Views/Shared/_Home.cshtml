<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/home.css" />
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        @if (Request.IsAuthenticated)
        {
            <div class="profile">
                <span>@Html.Encode(User.Identity.Name)</span>
                <ul>
                    <li>@Html.ActionLink("Detail Profile", "DetailProfile", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Update Profile", "UpdateProfile", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "admin"}, null)</li>
                </ul>
            </div>
        }
        <nav>
            <ul>
                <li><a href="#home">Khmer Demo</a></li>
                <li><a href="#project">Project</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#admin">Admin</a></li>
            </ul>
        </nav>
    </header>

    <section>

        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    
    </section>

    
    <footer>

    </footer>
</body>
</html>
