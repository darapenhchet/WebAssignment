<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/admin.css" />
    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="container">
            <div class="profile">
                @if (Request.IsAuthenticated)
                {
                    <span>@Html.Encode(User.Identity.Name)</span>
                    <ul>
                        <li>@Html.ActionLink("Detail Profile", "DetailProfile", "Admin")</li>
                        <li>@Html.ActionLink("Update Profile", "UpdateProfile", "Admin")</li>
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Admin")</li>
                    </ul> 
                } 
            </div>
        </div>
    </header>

    <section>
        <aside>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Users Management", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Articles Management", "Index", "Article")</li>
                </ul>
            </nav>
        </aside>

        <div class="container">
            @RenderBody()
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
        </div>
    </section>

    <footer>

    </footer>
   
</body>
</html>
