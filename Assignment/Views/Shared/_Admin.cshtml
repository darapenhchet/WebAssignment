<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/admin.css" />
    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Request.IsAuthenticated)
                {
    <header>
        <div class="container">
            <div class="profile">
                <span>@Html.Encode(User.Identity.Name)</span>
                <ul>
                    <li>@Html.ActionLink("Detail Profile", "DetailProfile", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Update Profile", "UpdateProfile", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Home", new { area = "admin" }, null)</li>
                    <li>@Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "admin"}, null)</li>
                </ul>
            </div>
        </div>
    </header>
                }  
    <section>
        @if (Request.IsAuthenticated)
                {
        <aside>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Users Management", "Index", "User", new { area = "Admin"}, null)</li>
                    <li>@Html.ActionLink("Category Management", "Index", "Category", new { area = "Admin"}, null)</li>
                    <li>@Html.ActionLink("Articles Management", "Index", "Article", new { area = "Admin"}, null)</li>
                    <li>@Html.ActionLink("Profile Management", "Index", "Home", new { area = "Admin"}, null)</li>
                </ul>
            </nav>
        </aside>
        }
        <div class="container">
            @RenderBody()
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)
        </div>
    </section>

    <footer>

    </footer>
                
</body>
</html>
