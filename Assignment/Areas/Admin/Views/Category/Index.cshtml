@model Assignment.Areas.Admin.Models.ViewModel

@{
    ViewBag.Title = "Category Management";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Category Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
@try 
{
    foreach (var item in Model.AllCategories) {
    <tr>
        <th>
            @Html.DisplayNameFor(model => item.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => item.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => item.OnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => item.ByUser)
        </th>
        <th></th>
    </tr>
    break;
    }

    foreach (var item in Model.AllCategories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ByUser)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateCategory", new { id=item.Id }) |
                @Html.ActionLink("Details", "DetailCategory", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id })
            </td>
        </tr>
    } 
}
catch (Exception ex)
{
    <tr>
        <td>No Category</td>
    </tr>
}
</table>